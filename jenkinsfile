pipeline {
    agent any

    stages {
        stage("SCM Checkout") {
            steps {
                git branch: 'master',
                    credentialsId: "raviGitAccess",            
                    url: 'https://github.com/avbravikanth1/my-react-app.git'

                dir('secondRepo') {
                    git branch: 'main',
                    credentialsId: "raviGitAccess",
                    url: 'https://github.com/avbravikanth1/new_repo.git'
                }
            }
        }               
        stage('Build') {
            steps {
                sh "npm install"
                //sh "npm run clean"
                sh "npm run build"
               
            }
        }
        stage('status') { 
            steps { 
                
                ansiblePlaybook credentialsId: 'DEV_APP_SERVER', installation: 'ansible', limit: 'appserver', playbook: 'secondRepo/code.yml'

            }  
        }          
           
    }
}